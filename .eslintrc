{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "airbnb"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false,
    "__AWS_COGNITO_USER_POOL_ID__": false,
    "__AWS_COGNITO_APP_ID__": false
  },
  "rules": {
    "key-spacing": 0,
    "jsx-quotes": [2, "prefer-single"],
    "max-len": [2, 120, 2],
    "object-curly-spacing": [2, "always"],
    "react/forbid-prop-types": [0],
    "react/jsx-filename-extension": [0, { "extensions": [".js"] }]
  }
}
